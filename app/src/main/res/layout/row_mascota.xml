<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cv"
    android:layout_width="410dp"
    android:layout_height="270dp"
    android:layout_gravity="center"
    android:layout_marginBottom="105dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

<RelativeLayout
        android:layout_width="320dp"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/perro1"
        android:src="@drawable/perro1"
        android:layout_width="280dp"
        android:layout_height="260dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"

        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/layout_marginTop_ossi"
            android:scaleType="center">

            <ImageView
                android:id="@+id/img_white_bone_perro1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dog_bone_104"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/text_Perro1"
                android:text="@string/nome_perro1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="@dimen/margin_left_name_perro1"
                android:textSize="@dimen/textSize_name_perro1"/>

            <TextView
                android:id="@+id/text_raiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text_raiting"
                android:layout_marginLeft="@dimen/margin_left_raiting_perro1"
                android:textSize="@dimen/textSize_name_perro1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_bone_yellow_perro1"
                android:src="@drawable/dog_bone_yellow_112"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_left_bone_yellow_perro1"/>

        </LinearLayout>

</RelativeLayout>






</android.support.v7.widget.CardView>