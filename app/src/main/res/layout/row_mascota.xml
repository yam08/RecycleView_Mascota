<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    card_view:cardCornerRadius="4dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:id="@+id/perro1"
            android:src="@drawable/perro1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="250dp"

            >


            <ImageView

                android:id="@+id/img_white_bone_perro1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dog_bone_104"
                android:layout_gravity="center_vertical"

                />

            <TextView

                android:id="@+id/text_Perro1"
                android:text="@string/nome_perro1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="@dimen/margin_left_name_perro1"
                android:textSize="@dimen/textSize_name_perro1"

                />

            <TextView
                android:id="@+id/text_raiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text_raiting"
                android:layout_marginLeft="@dimen/margin_left_raiting_perro1"
                android:textSize="@dimen/textSize_name_perro1"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_bone_yellow_perro1"
                android:src="@drawable/dog_bone_yellow_112"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_left_bone_yellow_perro1"


                />


        </LinearLayout>






</android.support.v7.widget.CardView>